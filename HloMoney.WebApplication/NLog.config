<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="logDirectory" value="${basedir}/Content/logs/${shortdate}" />

  <targets>
    <target layout="${date:format=dd-MM-yyyy HH\:mm\:ss} [${level:uppercase=true}] ${message}" name="fileLogInfo" xsi:type="File" fileName="${logDirectory}/info.txt" />
    <target layout="${date:format=dd-MM-yyyy HH\:mm\:ss} [${level:uppercase=true}] ${message}" name="fileLogError" xsi:type="File" fileName="${logDirectory}/error.txt" />
  </targets>

  <rules>
      <logger name="*" level="Info" writeTo="fileLogInfo" />
      <logger name="*" level="Error" writeTo="fileLogError" />
  </rules>
</nlog>
