@model HloMoney.WebApplication.Models.ReportCreateViewModel
@{
    ViewBag.Title = "Оставить отзыв";
}

<h2 class="page-title">@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-6">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Title) (осталось <span id="title-left">50</span> символов)</label>
                @Html.EditorFor(model => model.Title, new {htmlAttributes = new {@class = "form-control", style = "max-width: 100%", id = "title", maxlength = "50"}})
                @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
            </div>

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Text) (осталось <span id="text-left">200</span> символов)</label>
                @Html.TextAreaFor(model => model.Text, new {@class = "form-control", style = "max-width: 100%; min-height: 230px", id = "text", maxlength = "200"})
                @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mark)
                <br/>@Html.ValidationMessageFor(model => model.Mark, "", new {@class = "text-danger"})
                @if (Model != null)
                {
                    <p>Ваша оценка: <span class="report-mark-text">@Model.Mark из 5</span></p>
                }
                <div class="report-mark">
                    <div class="report-mark-bg"></div>
                    <div class="report-mark-fill"></div>
                    <div class="clear"></div>
                </div>
                <input type="hidden" name="Mark" id="Mark"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить отзыв" class="btn btn-primary"/>
                @Html.ActionLink("Отмена", "Index", "Home", null, new {@class = "btn btn-primary"})
            </div>
        </div>

        <div class="col-md-6">
            <h2>Оставить отзыв можно только 1 раз! Выскажите ваше мнение о сервисе и оставьте нам оценку!</h2>
        </div>
    </div>
}

<script type="text/javascript">

    @if(Model != null && Model.Mark > 0)
    {
        <text>window.reportMark = '@Model.Mark'.replace(',', '.');</text>
    }

    window.markSelected = false;
    window.markWidth = $('.report-mark-bg').width() / 5;

    $('#title')
        .on('input',
            function () {
                if (checkMaxLength($(this).val(), $(this).attr('maxlength'))) {
                    $('#title-left').text();
                    $('#title-left').text($(this).attr('maxlength') - $(this).val().length);
                }
            });

    $('#text')
        .on('input',
            function () {
                if (checkMaxLength($(this).val(), $(this).attr('maxlength'))) {
                    $('#text-left').text();
                    $('#text-left').text($(this).attr('maxlength') - $(this).val().length);
                }
            });

    function checkMaxLength(text, limit) {
        return text.length <= limit;
    }

    $(function () {
        if (window.reportMark !== undefined) {
            $('.report-mark-fill').css('width', (parseFloat(window.reportMark) * window.markWidth) + "px");

            $('#Mark').val(parseFloat(Math.round(parseFloat(window.reportMark), -2)));
        }
    });

    $('.report-mark')
        .on('click',
            function () {
                if (parseFloat($('#Mark').val()) >= 1) {
                    window.markSelected = true;
                    growlSuccess('Ваша оценка принята! Спасибо!');
                } else {
                    growlError('Оценка должна быть от 1го до 5ти!');
                }
            });

    $('.report-mark')
        .on('mousemove',
            function (e) {
                if (!window.markSelected) {
                    var parentOffset = $(this).parent().offset();

                    var relX = e.pageX - parentOffset.left;

                    $('.report-mark-fill').css('width', relX + "px");
                    $('.report-mark-text').text((relX / window.markWidth).toFixed(1) + " из 5");

                    $('#Mark').val((relX / window.markWidth).toFixed(1).replace('.', ','));
                }
            });

    $('.report-mark')
        .on('mouseleave',
            function () {
                window.markSelected = false;
            });
</script>