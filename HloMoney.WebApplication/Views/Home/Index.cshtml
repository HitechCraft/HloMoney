<script type="text/javascript">

    function loadAllActives() {
        $('#load-more').addClass('disabled');
        $('#load-all').html('<div id="loader"></div>');
        new imageLoader('startAnimation()');
        getAllActives();
    }

    function getAllActives() {
        $.get('@Url.Action("ActiveContests", "Contest")',
            { all: true },
            function (responce) {
                new imageLoader('stopAnimation()');
                $('#load-more').removeClass('disabled');
                $('.contest-actives').html('');
                $('.contest-actives').html(responce);

                $('#load-more').html('Показать все');
            });
    }
</script>