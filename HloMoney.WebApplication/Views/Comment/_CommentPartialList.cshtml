@model IEnumerable<HloMoney.WebApplication.Models.CommentViewModel>

<input type="hidden" id="first-comment" value="@ViewBag.FirstComment" />
<input type="hidden" id="last-comment" value="@ViewBag.LastComment"/>

@if (Model != null && Model.Any())
{
    foreach (var comment in Model)
    {
        <hr />
        <div class="row comment">
            <div class="comment-avatar-col">
                <div class="comment-author-avatar" style="background-image: url('data:image/jpeg; base64,@Convert.ToBase64String(comment.AuthorAvatar)');"></div>
            </div>
            <div class="comment-text-col">
                <p class="comment-text"><span class="comment-author-name">@comment.AuthorName</span>: @comment.Text</p>
                <p>
                    <strong>Дата:</strong> @comment.Date
                </p>
            </div>
        </div>
    }
}