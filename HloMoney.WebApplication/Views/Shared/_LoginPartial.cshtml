@using Microsoft.AspNet.Identity
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    <div class="user">
                        <div class="user-avatar-mini" style="background-image: url('@Html.Action("UserAvatarLink", "User")')">
                        </div>
                        <span>@User.Identity.GetUserName()</span>
                    </div>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Выход</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Вход", "Auth", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "login" })</li>
    </ul>
}
